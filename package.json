{
  "name": "low-level-magic-theme",
  "version": "1.0.0",
  "description": "Street Baroque Jekyll theme with Tailwind CSS and Alpine.js",
  "scripts": {
    "dev": "npm run css:watch",
    "build": "npm run js:build && npm run css:build",
    "css:build": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/main.css --minify",
    "css:watch": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/main.css --watch",
    "js:build": "cat ./assets/js/alpine-components.js ./node_modules/alpinejs/dist/cdn.min.js > ./assets/js/bundle.js",
    "jekyll:build": "bundle exec jekyll build",
    "jekyll:serve": "bundle exec jekyll serve",
    "start": "npm run css:watch & npm run jekyll:serve"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  }
}
